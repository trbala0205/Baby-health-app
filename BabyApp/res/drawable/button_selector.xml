<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@android:color/transparent" />
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/onPressColor">
        <shape android:shape="rectangle">
		    <stroke android:color="@color/white"
		        android:width="@dimen/dimen_1dp"/>
		    <corners android:radius="@dimen/dimen_2dp"></corners>
		</shape>
	</item>
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/onPressColor">
        <shape android:shape="rectangle">
		    <stroke android:color="@color/white"
		        android:width="@dimen/dimen_1dp"/>
		    <corners android:radius="@dimen/dimen_2dp"></corners>
		</shape>
	</item>
    <item >
        <shape android:shape="rectangle">
		    <stroke android:color="@color/white"
		        android:width="@dimen/dimen_1dp"/>
		    <corners android:radius="@dimen/dimen_2dp"></corners>
		</shape>
	</item>
</selector>