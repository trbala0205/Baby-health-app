<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

	        <android.support.v7.widget.Toolbar
	            android:id="@+id/toolbar"
	            android:layout_width="match_parent"
	            android:layout_height="?attr/actionBarSize"
	            android:background="?attr/colorPrimary"
	            app:layout_scrollFlags="enterAlways"
	            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:text="Newborn Screening"
			        android:textStyle="bold"
			        android:textSize="16dp"
			        android:textColor="@color/white"
			        android:id="@+id/toolbar_title" />
	            
            </android.support.v7.widget.Toolbar>
	    
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="?attr/actionBarSize">
        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
	 		<LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="20dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="G6PD Deficiency:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <Spinner
			        android:id="@+id/deficiency_spinner"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="7dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="12dp"
		            android:entries="@array/array_yes_no"
        			android:prompt="@string/hello_world"
        			android:textColor="@color/color_edittext" />   
		     </LinearLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="TSH:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <EditText
		            android:id="@+id/add_bio_dob"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_marginLeft="5dp"
		            android:backgroundTint="@android:color/transparent"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="12dp"
		            android:hint=""
		            android:textColorHint="@color/color_edittext"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/color_edittext"
		            android:textStyle="bold"
		            android:clickable="true"
		            android:background="@drawable/bg_editext"/>     
		     </LinearLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="fT4:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <EditText
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_marginLeft="5dp"
		            android:backgroundTint="@android:color/transparent"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="12dp"
		            android:hint=""
		            android:textColorHint="@color/color_edittext"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/color_edittext"
		            android:textStyle="bold"
		            android:background="@drawable/bg_editext" />     
		     </LinearLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/date_tsh"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Date (TSH/fT4):  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <ImageView
		            android:id="@+id/view_arrow1"
		            android:layout_width="10dp"
		            android:layout_height="10dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerInParent="true"
		            android:src="@drawable/right_arrow_24px"
		            android:clickable="true"
	            	android:onClick="setDate"/>
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/txt_date_tsh"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_toRightOf="@id/date_tsh"
		            android:layout_marginLeft="5dp"
		            android:backgroundTint="@android:color/transparent"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="10dp"
		            android:hint=""
		            android:textColorHint="@color/color_edittext"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/white"
		            android:textStyle="bold"
		            android:clickable="true"
	            	android:onClick="setDate"
		            android:background="@drawable/bg_editext" />   
		        
		     </RelativeLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="IEM Screening Done:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <Spinner
			        android:id="@+id/iem_screening_spinner"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="9dp"
		            android:entries="@array/array_yes_no"
        			android:prompt="@string/hello_world"
        			android:textColor="@color/color_edittext" />      
		     </LinearLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/date_iem_screening"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Date (IEM Screening):  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <ImageView
		            android:layout_width="10dp"
		            android:layout_height="10dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerInParent="true"
		            android:src="@drawable/right_arrow_24px"
		            android:clickable="true"
	            	android:onClick="setDate"/>
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/txt_date_screening"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_toRightOf="@id/date_iem_screening"
		            android:layout_marginLeft="5dp"
		            android:backgroundTint="@android:color/transparent"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="10dp"
		            android:hint=""
		            android:textColorHint="@color/color_edittext"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/white"
		            android:textStyle="bold"
		            android:clickable="true"
	            	android:onClick="setDate"
		            android:background="@drawable/bg_editext" />    
		     </RelativeLayout>
			 <!-- Hearing screening -->
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="0dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="20dp"
			        android:paddingBottom="0dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="HEARING SCREENING  "
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        android:textColor="#FFFFFF" />
		     </LinearLayout>
			 <View
				android:background="@color/white"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="QAE/ABAER:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <Spinner
			        android:id="@+id/abaer_spinner"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="9dp"
		            android:entries="@array/array_yes_no"
        			android:prompt="@string/hello_world"
        			android:textColor="@color/color_edittext" />      
		     </LinearLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/date1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Date:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <ImageView
		            android:layout_width="10dp"
		            android:layout_height="10dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerInParent="true"
		            android:src="@drawable/right_arrow_24px"
		            android:clickable="true"
	            	android:onClick="setDate"/>
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/txt_date1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_toRightOf="@id/date1"
		            android:layout_marginLeft="5dp"
		            android:backgroundTint="@android:color/transparent"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="10dp"
		            android:hint=""
		            android:textColorHint="@color/color_edittext"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/white"
		            android:textStyle="bold"
		            android:clickable="true"
	            	android:onClick="setDate"
		            android:background="@drawable/bg_editext" /> 
		     </RelativeLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Left Pass:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <Spinner
			        android:id="@+id/left_pass_spinner"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="9dp"
		            android:entries="@array/array_yes_no"
        			android:prompt="@string/hello_world"
        			android:textColor="@color/color_edittext" />      
		     </LinearLayout>
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Right Pass:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <Spinner
			        android:id="@+id/right_pass_spinner"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="9dp"
		            android:entries="@array/array_yes_no"
        			android:prompt="@string/hello_world"
        			android:textColor="@color/color_edittext" />    
		     </LinearLayout>
		     
			 <View
				android:background="@color/color_separator_line"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Needs further evaluation:  "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF" />
		        <Spinner
			        android:id="@+id/evaluation_spinner"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="9dp"
		            android:entries="@array/array_yes_no"
        			android:prompt="@string/hello_world"
        			android:textColor="@color/color_edittext" />    
		     </LinearLayout>
			 
			 <!-- Bottom buttons -->
		     <LinearLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:orientation="horizontal"
		   		android:background="@color/colorPrimary">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="PREVIOUS"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF"
			        android:layout_weight="1"
			        style="@style/RelativeLayout"
	    			android:clickable="true"
	    			android:onClick="callPreviousPage" />
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="NEXT"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="#FFFFFF"
			        android:layout_weight="1"
			        style="@style/RelativeLayout"
	    			android:clickable="true"
	    			android:onClick="callNextPage" />
		     </LinearLayout>
		</LinearLayout>
	</ScrollView>
</android.support.design.widget.CoordinatorLayout>