<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

	        <android.support.v7.widget.Toolbar
	            android:id="@+id/toolbar"
	            android:layout_width="match_parent"
	            android:layout_height="?attr/actionBarSize"
	            android:background="?attr/colorPrimary"
	            app:layout_scrollFlags="enterAlways"
	            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:text="Physical Examination"
			        android:textStyle="bold"
			        android:textSize="16dp"
			        android:textColor="@color/white"
			        android:id="@+id/toolbar_title" />
	            
            </android.support.v7.widget.Toolbar>
	    
    </android.support.design.widget.AppBarLayout>
    
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="?attr/actionBarSize">
        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@color/white">
	        
		    <com.main.java.babyapp.customviews.CustomTextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_gravity="left"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:fontFamily="sans-serif-light"
			 	android:textStyle="bold"
		        android:paddingLeft="5dp"
		        android:text="EYE EXAMINATION "
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@color/grey_600"
		        android:background="@color/grey_300" />
			    
		    <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="0dp" />
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Fixation on moving object: "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		     </RelativeLayout>
		     
		    <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="40dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/txt_weight"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Right eye "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <!-- <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/txt_date_tsh"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerInParent="true"
		            android:layout_marginLeft="5dp"
		            android:backgroundTint="@android:color/transparent"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="10dp"
		            android:paddingTop="10dp"
		            android:text="kg"
		            android:hint=""
		            android:textColorHint="@color/color_edittext"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/grey_400"
		            android:textStyle="bold"
		            android:clickable="true"
		            android:background="@drawable/bg_editext" />  --> 
		         <!-- Rightend Arrow -->
			     <CheckBox 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/checkbox_selector"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        android:focusable="false"
					android:focusableInTouchMode="false"/> 
		        
		     </RelativeLayout>
			 <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="40dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="40dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
		            android:id="@+id/txt_legth"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Left eye "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <CheckBox 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/checkbox_selector"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        android:focusable="false"
					android:focusableInTouchMode="false"/>  
		        
		     </RelativeLayout>
			 <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="40dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Cornea/Lens "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <CheckBox 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/checkbox_selector"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        android:focusable="false"
					android:focusableInTouchMode="false"/> 
		        
		     </RelativeLayout>
		     <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Pupillary Light reflex "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <CheckBox 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/checkbox_selector"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        android:focusable="false"
					android:focusableInTouchMode="false"/> 
		        
		     </RelativeLayout>
		     <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Red reflex "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <CheckBox 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/checkbox_selector"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        android:focusable="false"
					android:focusableInTouchMode="false"/> 
		        
		     </RelativeLayout>
		     <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Nystagmus "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <com.main.java.babyapp.customviews.ToggleSwitch 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        app:textToggleLeft="YES"
        			app:textToggleRight="NO"/> 
		        
		     </RelativeLayout>
		     <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Squint "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <com.main.java.babyapp.customviews.ToggleSwitch 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        app:textToggleLeft="YES"
        			app:textToggleRight="NO"/> 
		        
		     </RelativeLayout>
		     <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp" />
			 
			 <RelativeLayout 
		        android:layout_width="match_parent"
		   		android:layout_height="wrap_content"
		   		android:layout_marginLeft="20dp"
		   		android:layout_marginTop="5dp"
		   		android:layout_marginBottom="5dp">
		        <com.main.java.babyapp.customviews.CustomTextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_gravity="left"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:fontFamily="sans-serif-light"
				 	android:textStyle="bold"
			        android:layout_marginLeft="5dp"
			        android:text="Roving eye movement "
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/grey_500" />
		        
		        <com.main.java.babyapp.customviews.ToggleSwitch 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_centerInParent="true"
			        android:layout_marginRight="5dp"
			        app:textToggleLeft="YES"
        			app:textToggleRight="NO"/> 
		        
		     </RelativeLayout>
			 <View
				android:background="@color/grey_400"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="0dp" />
			 
		</LinearLayout>
	</ScrollView>
</android.support.design.widget.CoordinatorLayout>