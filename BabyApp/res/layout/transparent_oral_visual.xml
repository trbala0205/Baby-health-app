<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_dialog_root" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_gravity="right">

    <LinearLayout
        android:id="@+id/vertical_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <View 
            android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_gravity="center"
        	android:background="@drawable/health_booklet_oralvisual_03"
        	android:clickable="true"
        	android:onClick="callOralHealthPage"/>
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="20dp"
        	android:text="Oral Health"
        	android:gravity="center"
        	android:textColor="@color/white"
        	android:textSize="12sp"/>
        <View 
            android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:layout_gravity="center"
        	android:layout_marginBottom="20dp"
        	android:background="@drawable/health_booklet_oralvisual_07"/>
        
        <View 
            android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_gravity="center"
        	android:background="@drawable/health_booklet_oralvisual_11"/>
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="20dp"
        	android:text="Visual Check"
        	android:layout_gravity="center"
        	android:textColor="@color/white"
        	android:textSize="12sp"/>

    </LinearLayout>
    
</RelativeLayout>