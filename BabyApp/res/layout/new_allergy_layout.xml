<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

	        <android.support.v7.widget.Toolbar
	            android:id="@+id/toolbar"
	            android:layout_width="match_parent"
	            android:layout_height="?attr/actionBarSize"
	            android:background="?attr/colorPrimary"
	            app:layout_scrollFlags="enterAlways"
	            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:text="Allergy"
			        android:textStyle="bold"
			        android:textSize="16dp"
			        android:textColor="@color/white"
			        android:id="@+id/toolbar_title" />
	            
            </android.support.v7.widget.Toolbar>
	    
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="?attr/actionBarSize"
	    android:paddingTop ="10dp" >
	    
        <View
			android:background="@color/grey_300"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="0dp" />
        <TableLayout 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@color/white">
            <TableRow 
                android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="2"
	    		android:layout_marginTop="5dp"
	    		android:layout_marginBottom="5dp">
                <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="5dp"
			        android:layout_weight="1"
			        android:text="Drug name"
			        android:textStyle="bold"
			        android:textSize="14dp"
			        android:textColor="@color/grey_700" />
                <EditText
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:backgroundTint="@android:color/transparent"
		            android:layout_weight="1"
		            android:layout_marginLeft="0dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="0dp"
		            android:paddingTop="0dp"
		            android:hint="Helpoio molucus"
		            android:textSize="13sp"
		            android:textColorHint="@color/grey_500"
		            android:textColor="@color/grey_500"
		            android:textStyle="bold" />    
            </TableRow>
        </TableLayout>
        <View
			android:background="@color/grey_300"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="0dp" />
        
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="10dp"
	        android:paddingLeft="5dp"
	        android:text="Item that the child is allergic to"
	        android:textStyle="normal"
	        android:textSize="12sp"
	        android:textColor="@color/grey_700" />
        
        <!-- Allergic Reaction -->
        <View
			android:background="@color/grey_300"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="0dp" />
        <TableLayout 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@color/white">
            <TableRow 
                android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="2"
	    		android:layout_marginTop="5dp"
	    		android:layout_marginBottom="5dp">
                <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="5dp"
			        android:layout_weight="1"
			        android:text="Allergic reaction"
			        android:textStyle="bold"
			        android:textSize="14dp"
			        android:textColor="@color/grey_700" />
                <EditText
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:backgroundTint="@android:color/transparent"
		            android:layout_weight="1"
		            android:layout_marginLeft="0dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="0dp"
		            android:paddingTop="0dp"
		            android:hint="Anaphylaxis"
		            android:textSize="13sp"
		            android:textColorHint="@color/grey_500"
		            android:textColor="@color/grey_500"
		            android:textStyle="bold" />    
            </TableRow>
        </TableLayout>
        <View
			android:background="@color/grey_300"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="0dp" />
        
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="10dp"
	        android:paddingLeft="5dp"
	        android:text="Type of allergic reaction"
	        android:textStyle="normal"
	        android:textSize="12sp"
	        android:textColor="@color/grey_700" />
        
        <!-- Date -->
        <View
			android:background="@color/grey_300"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="0dp" />
        <TableLayout 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@color/white">
            <TableRow 
                android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="2"
	    		android:layout_marginTop="5dp"
	    		android:layout_marginBottom="5dp">
                <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="5dp"
			        android:layout_weight="0.9"
			        android:text="Date"
			        android:textStyle="bold"
			        android:textSize="16dp"
			        android:textColor="@color/grey_700" />
                <TextView
                    android:id="@+id/allergy_date"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:backgroundTint="@android:color/transparent"
		            android:layout_weight="0.9"
		            android:layout_marginLeft="0dp"
		            android:fontFamily="sans-serif-light"
		            android:paddingBottom="0dp"
		            android:paddingTop="0dp"
		            android:hint="02/05/2012"
		            android:textSize="14sp"
		            android:textColorHint="@color/grey_500"
		            android:textColor="@color/grey_500"
		            android:textStyle="bold"
		            android:clickable="true"
	            	android:onClick="setDate" />  
	            <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.2"
			        android:src="@drawable/arrow"
			        android:layout_gravity="center"
			        android:layout_marginRight="5dp"
			        android:clickable="true"
	            	android:onClick="setDate" />  
            </TableRow>
        </TableLayout>
        <View
			android:background="@color/grey_300"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="0dp" />
        
        <!-- bottom design -->
        <LinearLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:orientation="horizontal"
	   		android:background="@color/grey_300"
	   		android:layout_marginTop="10dp">
			
		    <LinearLayout 
		        android:id="@+id/confirmed_layout"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:layout_weight="1"
	    		android:clickable="true"
	   			style="@style/LinearLayout">
	    		<TextView
	    		    android:id="@+id/txt_confirmed_allergy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
				    android:layout_marginBottom="10dp"
			        android:gravity="center"
			        android:text="Confirmed Allergy"
			        android:textColor="@color/grey_500"
			        android:textSize="14sp"
			        android:singleLine="true"
			        android:textStyle="bold"/>
	    		<ImageView 
	    		    android:id="@+id/img_confirmed_allergy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:src="@drawable/dash_icon_64px"
			        android:layout_gravity="center"
			        android:layout_marginBottom="10dp"/>  
	         </LinearLayout>
	        <View
				android:background="@color/grey_300"
				android:layout_width="1dp"
				android:layout_height="wrap_content"/>
			<LinearLayout 
			    android:id="@+id/suspected_layout"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:layout_weight="1"
	    		android:clickable="true"
	   			style="@style/LinearLayout">
	    		<TextView
	    		    android:id="@+id/txt_suspected_allergy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:layout_marginBottom="10dp"
			        android:gravity="center"
			        android:text="Suspected Allergy"
			        android:textColor="@color/grey_500"
			        android:textSize="14dp"
			        android:singleLine="true"
			        android:textStyle="bold"/>
	    		<ImageView 
	    		    android:id="@+id/img_suspected_allergy"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:src="@drawable/dash_icon_64px"
			        android:layout_gravity="center"
			        android:layout_marginBottom="10dp"/>
	        </LinearLayout>
	   </LinearLayout>
        
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>